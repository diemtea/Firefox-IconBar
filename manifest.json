{
  "manifest_version": 2,
  "name": "IconBar",
  "version": "1.1",
  "description": "Sidebar with icon bookmarks, similar to Edge's sidebar.",
  "homepage_url": "https://github.com/diemtea/Firefox-IconBar",
  "icons": {
    "48": "icon.png"
  },
  "background": {
    "scripts": [
      "sidebar.js"
    ],
    "persistent": false
  },
  "sidebar_action": {
    "default_icon": {
      "48": "icon.png"
    },
    "default_title": "IconBar",
    "default_panel": "index.html"
  },
  "permissions": [
    "bookmarks",
    "contextMenus",
    "storage"
  ],
  "web_accessible_resources": [
    "index.html",
    "sidebar.js",
    "style.css"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  }
}
