{
  "manifest_version": 2,
  "name": "IconBar",
  "version": "1.0",
  "description": "A Firefox extension for icon bookmarks, similar to Edge's sidebar.",
  "icons": {
    "48": "icon.png"
  },
  "background": {
    "scripts": [
      "sidebar.js"
    ],
    "persistent": false
  },
  "sidebar_action": {
    "default_icon": {
      "48": "icon.png"
    },
    "default_title": "IconBar",
    "default_panel": "index.html"
  },
  "permissions": [
    "bookmarks"
  ]
}